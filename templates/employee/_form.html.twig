{{ form_start(form) }}

<div class="mb-3">
    {{ form_label(form.name) }}
    {# Add 'is-invalid' class if there are errors on the name field #}
    {{ form_widget(form.name, {'attr': {
        'class': 'form-control' ~ (form.name.vars.errors|length > 0 ? ' is-invalid' : '')
    }}) }}
    {# This will render the error message with Bootstrap's invalid-feedback class #}
    {{ form_errors(form.name) }}
</div>

