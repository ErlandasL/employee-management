{% extends 'base.html.twig' %}

{% block title %}Employee Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Employee Details</h1>

    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th scope="row">ID</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th scope="row">Name</th>
                <td>{{ employee.name }}</td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td>{{ employee.email }}</td>
            </tr>
            <tr>
                <th scope="row">Phone Number</th>
                <td>{{ employee.phoneNumber }}</td>
            </tr>
            <tr>
                <th scope="row">Hire Date</th>
                <td>{{ employee.hireDate ? employee.hireDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2">
        <a href="{{ path('app_employee_index') }}" class="btn btn-secondary">‚Üê Back to list</a>
        <a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn-primary">Edit</a>
        {{ include('employee/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
